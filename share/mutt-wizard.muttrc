color header brightcyan default "^Subject"
color header brightwhite default "^(CC|BCC)"
color header blue default ".*"
color body brightred default "[\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+" # E-Mail-Adressen
color body brightblue default "(https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+" # URL
color body green default "\`[^\`]*\`" # Grüner Text zwischen ` und `
color body brightblue default "^# \.*" # Überschriften als fettes Blau
color body brightcyan default "^## \.*" # Unterüberschriften als fettes Cyan
color body brightgreen default "^### \.*" # Unter-Unterüberschriften als fettes Grün
color body yellow default "^(\t| )*(-|\\*) \.*" # Listenelemente als Gelb
